<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-xl navbar-light bg-light">
        <%= link_to "Task Manager", root_path, class: "navbar-brand" %>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li><%= link_to 'タスク一覧', tasks_path, class: "nav-link" %></li>
            <li><%= link_to '新規タスク作成', new_task_path, class: "nav-link" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to '登録情報編集', edit_user_registration_path, class: "nav-link" %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          </ul>
          <% else %>
            <%= link_to 'サインアップ', new_user_registration_path %>
            <%= link_to 'ログイン', new_user_session_path %>
        <% end %>
      </nav>
    </header>
    <div class="container">
      <%# フラッシュメッセージ表示用 %>
      <% if flash[:notice] %>
        <p class="alert alert-success"><%= flash[:notice] %></p>
      <% elsif flash[:alert] %>
        <p class="alert alert-danger"><%= flash[:alert] %></p>
      <% end %>
      <%# ここにレンダリングされる %>
      <%= yield %>
    </div>
    </body>
</html>
